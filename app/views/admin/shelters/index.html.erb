<h1>All Shelters</h1>
<%= link_to 'Create a Pet', new_pets_path, data: { turbo_method: :get } %>
<%= render partial: "shared/forms/list_of_shelters" %>

<h2>Shelters with Pending Applications:</h2>
<div id="pending-applications">
  <% @shelters_pending.each do |shelter| %>
    <div id="pending-<%= shelter.id %>">
      <ul>
        <li><%= shelter.name %></li>
      </ul>
    </div>
  <% end %>
</div>

