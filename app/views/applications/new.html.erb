<h1>New Application</h1>
<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :applicant_name, "Applicant Name" %>
  <%= f.text_field :applicant_name %>

  <%= f.label :street_address, "Street Address"%>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip_code, "Zip Code"%>
  <%= f.number_field :zip_code %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Submit" %>
<% end %>
