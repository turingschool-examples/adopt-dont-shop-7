<h2>Add a Pet to this Application</h2>
<div id="search-bar">
  <%= form_with url: show_applications_path, method: :get do |f| %>
  <%= f.label :pet_name, 'Search for Pets by name:' %>
  <%= f.text_field :pet_name %>
  <%= f.submit "Submit" %>
  <% end %>
</div>
<% if params[:pet_name].present? %>
  <div id="search-results">
    <% @pets.each do |pet| %>
      <ul>
        <li><%= pet.name %> <%= button_to "Adopt this pet", create_application_pets_path, method: :post, params: {'pet_id' => pet.id, 'application_id' => params[:id], 'submit_app' => 'yes'} %></li>
      </ul>
    <% end %>
  </div>
  <% end %>
