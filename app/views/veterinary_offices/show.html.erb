<%= render partial: 'application/header', layout: 'header' %>
<%= render partial: 'application/body', layout: 'body' %>

<div class="myDiv" >
<h1><%= @veterinary_office.name %></h1>
</div>

<div class="body" >
  <p>Max patient capacity: <%= @veterinary_office.max_patient_capacity %></p>
  <p class="veterinarian-count">Veterinarians on staff: <%= @veterinary_office.vet_count %>
  <%= link_to "All veterinarians at #{@veterinary_office.name}", "/veterinary_offices/#{@veterinary_office.id}/veterinarians" %>

  <p><%= link_to "Delete #{@veterinary_office.name}", "/veterinary_offices/#{@veterinary_office.id}", method: :delete %></p>
</div>
